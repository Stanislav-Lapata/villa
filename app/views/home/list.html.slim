      .villas-list
        .area-group ng-repeat="area in areas"
          .area-name
            | {{area.name}}
          .clear
          .villas-list ng-repeat="villa in area.villas" ng-animate="'animate'"
            .large-3.small-6.columns.villa-row
              .shadow
                a href="/villas/{{villa.id}}"
                  img disable-context="" ng-src="{{villa.image_url}}"
              p.title-link
                a href="/villas/{{villa.id}}" {{villa.name}}
              span.price From ${{villa.price_from | number:0}}


