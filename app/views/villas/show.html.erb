<%= content_for :breadcrumbs do %>
  <h1 class="color-green pull-left"></h1>
  <ul class="pull-right breadcrumb">
    <li>
      <%= link_to t('navigation.home'), root_path %>
      <span class="divider">/</span>
    </li>
    <li>
      <%= link_to t('navigation.rentals'), villas_path %>
      <span class="divider">/</span>
    </li>
    <li class="active"><%= @villa.name %></li>
  </ul>
<% end %>

<div class="container portfolio-item">
  <div class="row-fluid margin-bottom-20">
    <!-- Carousel -->
        <div class="span7">
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">
                  <% @villa.images.each_with_index do |image, index| %>
                    <div class="item <%= 'active' if index == 0 %>">
                        <%= image_tag image.image.url %>
                        <div class="carousel-caption">
                            <h4>First Thumbnail label</h4>
                            <p>Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta.</p>
                        </div>
                    </div>
                  <% end %>
                </div>
                <div class="carousel-arrow">
                    <a data-slide="prev" href="#myCarousel" class="left carousel-control"><i class="icon-angle-left"></i></a>
                    <a data-slide="next" href="#myCarousel" class="right carousel-control"><i class="icon-angle-right"></i></a>
                </div>
            </div>
        </div><!--/span7-->
        <!-- //End Tabs and Carousel -->

        <div class="span5">
          <h3><%= @villa.name %></h3>
            <%== @villa.description %>
            <ul class="unstyled">
              <li><i class="icon-user color-green"></i> Jack Baur</li>
              <li><i class="icon-calendar color-green"></i> 14,2003 February</li>
              <li><i class="icon-tags color-green"></i> Websites, Google, HTML5/CSS3</li>
            </ul>
            <p><a class="btn-u btn-u-large" href="#">VISIT THE PROJECT</a></p>
        </div>
    </div>

    <!-- Tabs -->
    <div class="headline"><h3>Content Tabs</h3></div>
    <ul class="nav nav-tabs tabs">
      <li class="active"><a href="#home" data-toggle="tab">Description</a></li>
      <li><a href="#profile" data-toggle="tab">Price Guide</a></li>
      <li><a href="#messages" data-toggle="tab">Enquire Now</a></li>
    </ul><!--/tabs-->

    <div class="tab-content margin-bottom-20">
      <div class="tab-pane active" id="home">
        <%= image_tag @villa.images.sample.image.url(:thumb), alt: '', class: 'pull-left lft-img-margin img-width-200' %>
        <h4>Description</h4>
        <%== @villa.description %>
      </div>
      <div class="tab-pane" id="profile">
        <h4>Price Guide</h4>
        <div class="span6">
          <table class="table">
            <thead>
              <tr>
                <td></td>
                <td>Per Month, US$</td>
                <td>Per Week, US$</td>
                <td>Per Night, US$</td>
              </tr>
            </thead>
            <tbody>
              <tr class="success">
                <td>Low Season</td>
                <td><%= @villa.low_month %></td>
                <td><%= @villa.low_week %></td>
                <td><%= @villa.low_night %></td>
              </tr>
              <tr class="error">
                <td>High Season</td>
                <td><%= @villa.high_month %></td>
                <td><%= @villa.high_week %></td>
                <td><%= @villa.high_night %></td>
              </tr>
              <tr class="warning">
                <td>Peak Season</td>
                <td><%= @villa.peak_month %></td>
                <td><%= @villa.peak_week %></td>
                <td><%= @villa.peak_night %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="tab-pane" id="messages">
        <h4>Enquire Now</h4>
        <div class="span10">
          <form>
            <div class="span4">
              <label>Your Name</label>
              <input class="span4 border-radius-none" type="text" placeholder="Text input" />
            </div>
            <div class="span4">
              <label>Your Name</label>
              <input class="span4 border-radius-none" type="text" placeholder="Text input" />
            </div>
            <div class="span4">
              <label>Your Name</label>
              <input class="span4 border-radius-none" type="text" placeholder="Text input" />
            </div>
            <div class="span2">
              <label>Your Name</label>
              <input class="span2 border-radius-none" type="text" placeholder="Text input" />
            </div>
            <div class="span2">
              <label>Your Name</label>
              <input class="span2 border-radius-none" type="text" placeholder="Text input" />
            </div>
            <div class="clearfix"></div>
            <div class="span8">
              <label>Please write here your text</label>
              <textarea class="span8 border-radius-none" rows="8"></textarea>
            </div>
            <div class="clearfix"></div>
            <div class="span4">
              <button type="submit" class="btn-u">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
